@{
    Layout = "CustomerAccount";
    ViewData["Title"] = "Customer Delivery Address Book";
}

@model eCommerce.Storefront.Controllers.ViewModels.CustomerAccount.CustomerDetailView

<h2>Delivery Addresses</h2>
@Html.ActionLink("Add new address", "AddDeliveryAddress", "Customer")    
<ul>
@foreach (var deliveryAddress in Model.Customer.DeliveryAddressBook)
{
    <li>@Html.ActionLink(deliveryAddress.Name, "EditDeliveryAddress", "Customer", new { deliveryAddressId = deliveryAddress.Id }, null)</li>
}
</ul>    