@{
    Layout = "Checkout";
    ViewData["Title"] = "Add Delivery Address";
}

@model eCommerce.Storefront.Services.ViewModels.DeliveryAddressView

<h2>Add Delivery Address</h2>    
@using (Html.BeginForm("AddDeliveryAddress", "Checkout"))
