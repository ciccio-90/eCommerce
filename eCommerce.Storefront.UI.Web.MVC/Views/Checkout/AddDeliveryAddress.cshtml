    @await Html.PartialAsync("~/Views/Shared/AddressEdit.cshtml", Model)
    <p>
        <input type="submit" value="Create Address and Checkout" />
    </p>        
}
<div>
    @Html.ActionLink("Check Out", "Checkout", "Checkout")
</div><br />