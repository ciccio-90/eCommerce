@{
    Layout = "Site";
}

@model eCommerce.Storefront.Controllers.ViewModels.CustomerAccount.BaseCustomerAccountView

@section headerBasketSummary { 
    @await Html.PartialAsync("~/Views/Shared/BasketSummary.cshtml", Model.BasketSummary)
}

@section MenuContent { 
    @if (IsSectionDefined("MenuContent"))
    {
        @RenderSection("MenuContent")
    }
    else
    {
        @await Html.PartialAsync("~/Views/Shared/CustomerMenu.cshtml")
    }
}

@RenderBody()